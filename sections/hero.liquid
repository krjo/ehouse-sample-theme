<section aria-label="Hero">
  <div class="relative w-full overflow-hidden">
    <picture>
      <source
        srcset="{{ section.settings.desktop_image | image_url: width: 2560 }}"
        width="{{ section.settings.desktop_image.width }}"
        height="{{ section.settings.desktop_image.height }}"
        media="(min-width: 992px)">
      <img
        src="{{ section.settings.mobile_image | image_url: width: 1024 }}"
        alt="{{ section.settings.title }}"
        width="{{ section.settings.mobile_image.width }}"
        height="{{ section.settings.mobile_image.height }}"
        class="w-full h-full object-cover block lg:min-h-[700px]">
    </picture>
    <div class="lg:absolute text-center w-full items-center lg:top-1/2 left-0 lg:-translate-y-2/4 -mt-20 lg:mt-0 px-3 lg:px-0">
      <div class="lg:max-w-xl lg:mx-32 bg-white lg:bg-transparent relative py-6 lg:py-0 border border-solid border-medium-gray lg:border-none">
        <div style="color: {{ section.settings.text_color }}">
          {% if section.settings.title %}
            <h1 class="text-[36px] lg:text-7xl xl:text-[80px] leading-none font-bold tracking-wider">
              {% if section.settings.overline %}
                <small class="text-sm lg:text-xl mb-4 lg:mb-6 tracking-wide block font-medium">{{ section.settings.overline }}</small>
              {% endif %}
              {{ section.settings.title | newline_to_br }}
            </h1>
          {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
          <div class="grid grid-cols-2 md:grid-cols-4 lg:flex justify-center gap-4 mt-6 lg:mt-12 px-4 lg:px-0">
            {% for block in section.blocks %}
              <a href="{{ block.settings.link_url }}" class="flex-1 button">{{ block.settings.link_text }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}